layout {
    size: 2.25in, 3.5in
    #data: test.csv
    dpi: 300
    #csv: excel

    template: template.bwl
}
export {
    output: out/
    include-bleed: no
    pdf {
        #margin: foo
        name: yams
    }
}

briks {
    yum = foo
    bar = [1] is good
}

defaults {
    #fontFamily: Times New Roman
}

title {
    type: text
    position: center, 1/4in
    width: 1.75in
    height: 2in
    text: [title]
    font-size: 30pt
    decoration: italic, underline
}
icon {
    type: image
    x: .5in
    y: 7/8in
    angle: 0
    source: res/[img]
    scale: 50%

    caption {
        type: text
        text: a face
        decoration: no-word-wrap
        x: center
        y: .25in
        #alignment: no
        #width: 1in
    }
}

rotator {
    type: rect
    x: 1.25in
    y: 7/8in
    width: 3/4in
    height: 3/8in
    angle: 180
    rotated {
        type: rect
        x: 0
        y: 0

    }

}
bodyBorder {
    type: rect
    foo: bar
    #x: center
    #y: 1.5in
    position: center, 1.5in
    width: 1.75in
    #lineWidth: 0.01in
    height: 1.75in
    #xRadius: 1/8in; yRadius: 1/4in;
    radius: 1/8in, 1/4in
}
body {
    type: text
    x: center
    y: 1.625in
    width: 1.5in
    height: 1.25in
    text: [body]
    font-family: Cormorant
}



banjo {
    start: 0, 0
    end: 1.25in, 7/8in
    draw: yes
    line: 5px, blue
    #x2: 1.25in
    #y2: 7/8in
}

calc {
    type: text
    x: 1/8in
    width: 100%
    align: left, top
    text: [switch| foo| bar|1 | bif|2 | baz|3]
}

data {
title, img, body
Smile, smile.png, This face is smiling.
Neutral, flat.png, This face is neither smiling nor frowning.
Frown, frown.png, This face is frowning\, [i|unfortunate].
}